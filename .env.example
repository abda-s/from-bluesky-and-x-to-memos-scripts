# ==========================================
# GENERAL MEMOS CONFIGURATION
# Used by: delete_memos_duplicates.py, delete_old_memos.py, 
#          bluesky_to_memos.py, and all x_scraper scripts.
# ==========================================
MEMOS_URL=http://192.168.X.X:5230
MEMOS_TOKEN=your_memos_access_token_here

# ==========================================
# BLUESKY MIGRATION
# Used by: bluesky_to_memos.py
# ==========================================
BSKY_HANDLE=your_handle.bsky.social
BSKY_PASSWORD=your_app_password

# ==========================================
# TWITTER/X SCRAPING
# Used by: hybrid_x_scraper.py, x_scraper_chunckes.py, 
#          x_scraper_fast_scrolling.py
# ==========================================
TWITTER_USERNAME=target_username_without_at_symbol

# Twitter Authentication (Required for scraping)
# Get these from your browser cookies while logged into X.com
TWITTER_AUTH_TOKEN=your_auth_token_cookie_value
TWITTER_CT0=your_ct0_cookie_value

# Scraping Settings
MAX_SCROLLS=50
FILTER_REPLIES=true

# Date Ranges for specific scrapers (hybrid & chunks)
# Start date for historical search
START_YEAR=2015
START_MONTH=1
START_DAY=1

# End date (Only used by x_scraper_chunckes.py)
END_YEAR=2025
END_MONTH=1
END_DAY=1

# ==========================================
# MEMOS TO MEMOS COPY/MIGRATION
# Used by: copy_all_memoes_from_one_acc_to_another.py
# ==========================================
SOURCE_MEMOS_URL=http://source-instance:5230
SOURCE_MEMOS_TOKEN=source_token
DEST_MEMOS_URL=http://dest-instance:5230
DEST_MEMOS_TOKEN=dest_token

# Optional settings for copy script
# If FILTER_HANDLE is set, only memos starting with "@{FILTER_HANDLE}:"
# will be copied, and the handle prefix will be removed from the content.
FILTER_HANDLE=

# If SOURCE_HANDLE is left empty, memos are copied as-is (unless filtered).
# If set, it prepends "@HANDLE:" to the content.
SOURCE_HANDLE=original_author_handle
PAGE_SIZE=100
RATE_LIMIT_DELAY=0.1
MAX_RETRIES=3

# ==========================================
# MEMOS CLEANUP
# Used by: delete_old_memos.py
# ==========================================
# Delete all memos created BEFORE this date
CUTOFF_DATE=2025-12-26T00:00:00Z
