# ==========================================
# GENERAL MEMOS CONFIGURATION
# Used by: delete_memos_duplicates.py, delete_old_memos.py, 
#          bluesky_to_memos.py, and all x_scraper scripts.
# ==========================================
# Your Memos instance URL (including http/https and port)
MEMOS_HOST=http://192.168.X.X:5230
# Create this in Memos: Settings -> Access Tokens
MEMOS_ACCESS_TOKEN=your_memos_access_token_here

# ==========================================
# BLUESKY MIGRATION
# Used by: bluesky_to_memos.py
# ==========================================
BLUESKY_HANDLE=your_handle.bsky.social
# Generate an App Password in Bluesky: Settings -> Privacy & Security -> App Passwords
# DO NOT use your main login password.
BLUESKY_PASSWORD=your_app_password

# ==========================================
# TWITTER/X SCRAPING
# Used by: hybrid_x_scraper.py, x_scraper_chunckes.py, 
#          x_scraper_fast_scrolling_improved.py
# ==========================================
X_USERNAME=target_username_without_at_symbol

# Twitter Authentication (Required for scraping)
# 1. Login to X.com in your browser
# 2. Open Developer Tools (F12) -> Application/Storage tab -> Cookies
# 3. Find 'auth_token' and 'ct0' for twitter.com
X_AUTH_TOKEN=your_auth_token_cookie_value
X_CT0=your_ct0_cookie_value

# Scraping Settings
X_MAX_SCROLLS=50
X_FILTER_REPLIES=true

# Date Ranges for specific scrapers (hybrid & chunks)
# Start date for historical search
X_START_YEAR=2015
X_START_MONTH=1
X_START_DAY=1

# End date (Only used by x_scraper_chunckes.py)
X_END_YEAR=2025
X_END_MONTH=1
X_END_DAY=1

# ==========================================
# MEMOS TO MEMOS COPY/MIGRATION
# Used by: copy_all_memoes_from_one_acc_to_another.py
# ==========================================
MIGRATION_SOURCE_HOST=http://source-instance:5230
MIGRATION_SOURCE_TOKEN=source_token
MIGRATION_DEST_HOST=http://dest-instance:5230
MIGRATION_DEST_TOKEN=dest_token

# Optional settings for copy script
# If MIGRATION_FILTER_HANDLE is set, only memos starting with "@{MIGRATION_FILTER_HANDLE}:"
# will be copied, and the handle prefix will be removed from the content.
MIGRATION_FILTER_HANDLE=

# If MIGRATION_ADD_PREFIX_HANDLE is left empty, memos are copied as-is (unless filtered).
# If set, it prepends "@HANDLE:" to the content.
MIGRATION_ADD_PREFIX_HANDLE=original_author_handle
PAGE_SIZE=100
RATE_LIMIT_DELAY=0.1
MAX_RETRIES=3

# ==========================================
# MEMOS CLEANUP
# Used by: delete_old_memos.py
# ==========================================
# Delete all memos created BEFORE this date (ISO 8601 format)
CLEANUP_CUTOFF_DATE=2025-12-26T00:00:00Z
